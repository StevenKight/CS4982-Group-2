<Page
    x:Class="CapstoneGroup2.Desktop.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBox Name="UsernameTextBox" HorizontalAlignment="Center" Margin="0,371,0,0"
                 TextWrapping="Wrap" PlaceholderText="Username" VerticalAlignment="Top" Height="64" Width="317"
                 FontSize="30" />
        <TextBox Name="PasswordTextBox" HorizontalAlignment="Center" Margin="0,477,0,0"
                 TextWrapping="Wrap" PlaceholderText="Password" VerticalAlignment="Top" Height="64" Width="317"
                 FontSize="30" />
        <Button Name="LoginButton" Content="Login" Margin="0,616,0,0" VerticalAlignment="Top"
                Height="53" Width="174" HorizontalAlignment="Center" FontSize="25" Click="LoginButton_Click" />
        <TextBlock Name="ErrorTextBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text=""
                   VerticalAlignment="Center" FontSize="30" Visibility="Collapsed" />
        <TextBlock Name="BrandingTextBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Welcome to DocuNotes"
                   VerticalAlignment="Top" FontSize="40" Margin="0,206,0,0" MaxWidth="400" Height="120" Width="440" TextAlignment="Center" />
        <Button x:Name="CreateButton" Content="Create" Margin="0,736,0,0"
                VerticalAlignment="Top" Height="53" Width="174" HorizontalAlignment="Center" FontSize="25" />
        <TextBlock x:Name="BrandingTextBlock_Copy" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Or"
                   VerticalAlignment="Top" FontSize="20" Margin="0,694,0,0" MaxWidth="400"
                   Height="50" Width="40" TextAlignment="Center"/>

    </Grid>
</Page>